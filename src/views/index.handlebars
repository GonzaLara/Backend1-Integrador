<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <h1>Bienvenido</h1>
        </div>
        <div class="col-lg-12">
            {{#if message}}
                <div class="alert alert-dismissible fade show alert-{{message.type}}" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong>
                        {{message.message}}
                    </strong>
                </div>
            {{/if}}
            <div class="table-responsive">
                {{#if users.length}}
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th class="text-center">ID</th>
                                <th class="text-center">Imagen</th>
                                <th class="text-center">Nombre</th>
                                <th class="text-center">Email</th>
                                <th class="text-center">Telefono</th>
                                <th class="text-center">Accion</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                                <tr class="align-middle">
                                    <td class="text-center">{{this.displayIndex}}</td>
                                    <td><img src="/img/{{this.image}}" width="50" class="img-thumbnail"></td>
                                    <td class="text-center">{{this.name}}</td>
                                    <td class="text-center">{{this.email}}</td>
                                    <td class="text-center">{{this.phone}}</td>
                                    <td>
                                        <a href="/edit/{{this._id}}" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/{{this._id}}" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <h1 class="text-center text-secondary mt-5">Sin usuarios en la base de datos.</h1>
                {{/if}}
            </div>
        </div>
    </div>
</div>