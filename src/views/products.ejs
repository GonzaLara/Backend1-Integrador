<%- include('layouts/header.ejs') %>
    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <h1>Productos Disponibles</h1>
            </div>

            <% products.forEach(product=> { %>
                <div class="col-md-4">
                    <div class="card" style="border: transparent; text-align: center">
                        <img src="<%= product.image %>" class="card-img-top mx-auto mt-5" alt="<%= product.name %>" style="width: 15rem; ">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= product.name %>
                            </h5>
                            <p class="card-text">Precio: $<%= product.price %>
                            </p>
                            <div class="input-group mb-3 justify-content-center">
                                <input type="number" id="quantity-<%= product._id %>" value="1" min="1" class="form-control" style="max-width: 100px; width: 70px;" />
                                <button style="border: 1px solid black;" class="btn btn-success" type="button" onclick="changeQuantity('<%= product._id %>', 1)">+</button>
                                <button style="border: 1px solid black;" class="btn btn-danger" type="button" onclick="changeQuantity('<%= product._id %>', -1)">-</button>
                            </div>
                            <div>
                                <button class="btn btn-primary" type="button" onclick="addToCart('<%= product._id %>')">Carrito</button>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <%- include('layouts/footer.ejs') %>

        <script>
            function changeQuantity(productId, change) {
                const quantityInput = document.getElementById(`quantity-${productId}`);
                let currentQuantity = parseInt(quantityInput.value);

                if (change === 1) {
                    currentQuantity += 1;
                } else if (change === -1 && currentQuantity > 1) {
                    currentQuantity -= 1;
                }

                quantityInput.value = currentQuantity;
            }

            function addToCart(productId) {
                const quantityInput = document.getElementById(`quantity-${productId}`);
                const quantity = parseInt(quantityInput.value);

                fetch('/add-to-cart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ productId, quantity }),
                })
                    .then(response => response.json())
                    .then(data => {
                        alert(data.message);
                    })
                    .catch((error) => {
                        console.error('Error:', error);
                    });
            }
        </script>