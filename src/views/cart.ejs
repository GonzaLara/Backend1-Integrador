<%- include('layouts/header.ejs') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <h1>Carrito de Compras</h1>
        </div>
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped text-center my-3">
                    <thead>
                        <tr class="table-dark">
                            <th class="text-center">Imagen</th>
                            <th class="text-center">Producto</th>
                            <th class="text-center">Descripción</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-center">Precio</th>
                            <th class="text-center">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let totalPrice = 0; %>
                        <% if (products.length > 0) { %>
                            <% products.forEach(product => { %>
                                <tr class="align-middle">
                                    <td><img src="<%= product.image %>" width="50" class="img-thumbnail"></td>
                                    <td><%= product.name %></td>
                                    <td><%= product.description %></td>
                                    <td><%= product.quantity || 0 %></td>
                                    <td>$<%= product.price ? product.price.toFixed(2) : '0.00' %></td>
                                    <td>$<%= (product.quantity * product.price).toFixed(2) %></td> <!-- Calcular el total -->
                                </tr>
                                <% totalPrice += (product.quantity || 0) * (product.price || 0); %> <!-- Acumula el total -->
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td class="text-center">El carrito está vacío.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('layouts/footer.ejs') %>
