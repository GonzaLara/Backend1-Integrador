<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <h1>Carrito de Compras</h1>
        </div>
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped text-center my-3">
                    <thead>
                        <tr class="table-dark">
                            <th class="text-center">Imagen</th>
                            <th class="text-center">Producto</th>
                            <th class="text-center">Descripción</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-center">Precio</th>
                            <th class="text-center">Total</th>
                            <th class="text-center">Accion</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if products.length}}
                        {{#each products}}
                        <tr class="align-middle">
                            <td><img src="{{this.image}}" width="50" class="img-thumbnail"></td>
                            <td class="text-center">{{this.name}}</td>
                            <td class="text-center">{{this.description}}</td>
                            <td class="text-center">{{this.quantity}}</td>
                            <td class="text-center">$ {{this.price}}</td>
                            <td class="text-center">$ {{multiply this.quantity this.price}}</td>
                            <td class="text-center">
                                <a class="text-warning espacio" href="#" onclick="removeOne('{{this._id}}')"><i class="fa-solid fa-minus"></i></a>
                                <a class="text-danger espacio" href="#" onclick="removeAll('{{this._id}}')"><i class="fas fa-trash fa-lg mx-1"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                        {{else}}
                        <tr>
                            <td class="text-center" colspan="7">Carrito vacío.</td>
                        </tr>
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/js/cart.js"></script>