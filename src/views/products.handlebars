<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <h1>Productos Disponibles</h1>
        </div>

        {{#each products}}
        <div class="col-md-4">
            <div class="card carta"
                style="border: 1px solid transparent; background: rgba(255, 255, 255, 0.5); margin-bottom: 10px">
                <img src="{{this.image}}" class="card-img-top mx-auto mt-5 cartita" alt="{{this.name}}"
                    style="width: 13rem; border-radius: 50%;">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text">Precio: ${{this.price}}</p>
                    <div class="input-group mb-3 justify-content-center">
                        <input type="number" id="quantity-{{this._id}}" value="1" min="1" class="form-control barra" />
                        <button style="border: 1px solid black; border-radius: 0;" class="btn btn-success boton"
                            type="button" onclick="cantidad('{{this._id}}', 1)">+</button>
                        <button style="border: 1px solid black; border-radius: 0;" class="btn btn-danger boton"
                            type="button" onclick="cantidad('{{this._id}}', -1)">-</button>
                    </div>
                    <div>
                        <button class="btn btn-info" type="button" onclick="agregar('{{this._id}}')">Carrito</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    {{!-- Paginacion con mongoose-paginate-v2 --}}
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {{#if (gt currentPage 1)}}
            <li class="page-item">
                <a class="page-link" href="/products?page={{dec currentPage}}&limit={{limit}}"><</a>
            </li>
            {{/if}}

            {{#each (range 1 totalPages)}}
            <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
                <a class="page-link" href="/products?page={{this}}&limit={{../limit}}">{{this}}</a>
            </li>
            {{/each}}

            {{#if (lt currentPage totalPages)}}
            <li class="page-item">
                <a class="page-link" href="/products?page={{inc currentPage}}&limit={{limit}}">></a>
            </li>
            {{/if}}

        </ul>
    </nav>
</div>

<script src="/js/products.js"></script>